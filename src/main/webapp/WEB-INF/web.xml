<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>project-1</display-name>
	<context-param>
		<param-name>log4j-config-location</param-name>
		<param-value>WEB-INF/log4j.properties</param-value>
	</context-param>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
    <description></description>
    <display-name>FrontController</display-name>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.revature.servlets.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/user</url-pattern>
    <url-pattern>/user/add</url-pattern>
    <url-pattern>/user/delete</url-pattern>
    <url-pattern>/user/update</url-pattern>
    <url-pattern>/users/view-employees</url-pattern>
    <url-pattern>/users/view-all</url-pattern>
    <url-pattern>/reimbursement/submit</url-pattern>
    <url-pattern>/reimbursements/view-all</url-pattern>
    <url-pattern>/reimbursements/view-past</url-pattern>
    <url-pattern>/reimbursements/view-pending</url-pattern>
    <url-pattern>/authorize</url-pattern>
    <url-pattern>/help</url-pattern>
  </servlet-mapping>
</web-app>